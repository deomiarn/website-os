{
  "$schema": "./schemas/design-tokens.schema.json",
  "version": "1.0.0",
  "name": "Zahnarzt Dielsdorf Design System",
  "description": "Warm & Einladend - Sage Green + Gold auf Off-White",

  "colors": {
    "light": {
      "background": "oklch(0.97 0.015 85)",
      "foreground": "oklch(0.25 0.02 85)",

      "card": "oklch(0.99 0.01 85)",
      "card-foreground": "oklch(0.25 0.02 85)",

      "popover": "oklch(0.99 0.01 85)",
      "popover-foreground": "oklch(0.25 0.02 85)",

      "primary": "oklch(0.55 0.1 145)",
      "primary-foreground": "oklch(0.98 0.01 145)",

      "secondary": "oklch(0.92 0.02 85)",
      "secondary-foreground": "oklch(0.25 0.02 85)",

      "accent": "oklch(0.75 0.14 85)",
      "accent-foreground": "oklch(0.25 0.05 85)",

      "muted": "oklch(0.92 0.02 85)",
      "muted-foreground": "oklch(0.45 0.02 85)",

      "destructive": "oklch(0.55 0.2 25)",
      "destructive-foreground": "oklch(0.98 0.01 25)",

      "border": "oklch(0.88 0.02 85)",
      "input": "oklch(0.88 0.02 85)",
      "ring": "oklch(0.55 0.1 145)",

      "chart": {
        "1": "oklch(0.55 0.1 145)",
        "2": "oklch(0.75 0.14 85)",
        "3": "oklch(0.65 0.08 145)",
        "4": "oklch(0.85 0.1 85)",
        "5": "oklch(0.45 0.08 145)"
      }
    }
  },

  "typography": {
    "fonts": {
      "display": {
        "family": "Space Grotesk",
        "fallback": "system-ui, sans-serif",
        "weights": [500, 600, 700],
        "googleFonts": "Space+Grotesk:wght@500;600;700"
      },
      "body": {
        "family": "Inter",
        "fallback": "system-ui, sans-serif",
        "weights": [400, 500, 600],
        "googleFonts": "Inter:wght@400;500;600"
      },
      "mono": {
        "family": "JetBrains Mono",
        "fallback": "monospace",
        "weights": [400, 500],
        "googleFonts": "JetBrains+Mono:wght@400;500"
      }
    },
    "scale": {
      "xs": {
        "size": "clamp(0.75rem, 0.7rem + 0.25vw, 0.8125rem)",
        "lineHeight": "1.5",
        "letterSpacing": "0.01em"
      },
      "sm": {
        "size": "clamp(0.8125rem, 0.775rem + 0.25vw, 0.875rem)",
        "lineHeight": "1.5",
        "letterSpacing": "0.01em"
      },
      "base": {
        "size": "clamp(0.9375rem, 0.9rem + 0.25vw, 1rem)",
        "lineHeight": "1.6",
        "letterSpacing": "0"
      },
      "lg": {
        "size": "clamp(1.0625rem, 1rem + 0.5vw, 1.125rem)",
        "lineHeight": "1.5",
        "letterSpacing": "-0.01em"
      },
      "xl": {
        "size": "clamp(1.1875rem, 1.1rem + 0.75vw, 1.25rem)",
        "lineHeight": "1.4",
        "letterSpacing": "-0.01em"
      },
      "2xl": {
        "size": "clamp(1.4375rem, 1.25rem + 1vw, 1.5rem)",
        "lineHeight": "1.3",
        "letterSpacing": "-0.02em"
      },
      "3xl": {
        "size": "clamp(1.75rem, 1.5rem + 1.5vw, 1.875rem)",
        "lineHeight": "1.2",
        "letterSpacing": "-0.02em"
      },
      "4xl": {
        "size": "clamp(2.125rem, 1.75rem + 2vw, 2.25rem)",
        "lineHeight": "1.1",
        "letterSpacing": "-0.03em"
      },
      "5xl": {
        "size": "clamp(2.625rem, 2rem + 3vw, 3rem)",
        "lineHeight": "1.05",
        "letterSpacing": "-0.03em"
      },
      "6xl": {
        "size": "clamp(3.25rem, 2.5rem + 4vw, 3.75rem)",
        "lineHeight": "1",
        "letterSpacing": "-0.04em"
      }
    }
  },

  "spacing": {
    "base": 4,
    "scale": {
      "0": "0",
      "1": "0.25rem",
      "2": "0.5rem",
      "3": "0.75rem",
      "4": "1rem",
      "5": "1.25rem",
      "6": "1.5rem",
      "8": "2rem",
      "10": "2.5rem",
      "12": "3rem",
      "16": "4rem",
      "20": "5rem",
      "24": "6rem",
      "32": "8rem"
    },
    "section": {
      "sm": "clamp(3rem, 2.5rem + 3vw, 4rem)",
      "md": "clamp(4rem, 3rem + 5vw, 6rem)",
      "lg": "clamp(6rem, 4rem + 8vw, 8rem)"
    },
    "container": {
      "sm": "640px",
      "md": "768px",
      "lg": "1024px",
      "xl": "1280px",
      "2xl": "1400px"
    }
  },

  "radius": {
    "none": "0",
    "sm": "0.375rem",
    "md": "0.625rem",
    "lg": "0.875rem",
    "xl": "1.25rem",
    "2xl": "1.5rem",
    "full": "9999px"
  },

  "shadows": {
    "sm": "0 1px 2px 0 oklch(0.25 0.02 85 / 0.05)",
    "md": "0 4px 6px -1px oklch(0.25 0.02 85 / 0.08), 0 2px 4px -2px oklch(0.25 0.02 85 / 0.05)",
    "lg": "0 10px 15px -3px oklch(0.25 0.02 85 / 0.08), 0 4px 6px -4px oklch(0.25 0.02 85 / 0.05)",
    "xl": "0 20px 25px -5px oklch(0.25 0.02 85 / 0.08), 0 8px 10px -6px oklch(0.25 0.02 85 / 0.05)"
  },

  "animations": {
    "style": "subtle",
    "duration": {
      "fast": "150ms",
      "normal": "250ms",
      "slow": "400ms"
    },
    "easing": {
      "default": "cubic-bezier(0.4, 0, 0.2, 1)",
      "in": "cubic-bezier(0.4, 0, 1, 1)",
      "out": "cubic-bezier(0, 0, 0.2, 1)",
      "inOut": "cubic-bezier(0.4, 0, 0.2, 1)"
    },
    "keyframes": {
      "fadeIn": {
        "from": { "opacity": "0" },
        "to": { "opacity": "1" }
      },
      "fadeInUp": {
        "from": { "opacity": "0", "transform": "translateY(10px)" },
        "to": { "opacity": "1", "transform": "translateY(0)" }
      },
      "scaleIn": {
        "from": { "opacity": "0", "transform": "scale(0.95)" },
        "to": { "opacity": "1", "transform": "scale(1)" }
      }
    }
  },

  "breakpoints": {
    "sm": "640px",
    "md": "768px",
    "lg": "1024px",
    "xl": "1280px",
    "2xl": "1536px"
  },

  "metadata": {
    "createdAt": "2026-01-09",
    "updatedAt": "2026-01-09",
    "source": "webdesign-os design-system workflow",
    "wcagCompliance": {
      "level": "AA",
      "contrastRatio": {
        "normalText": "4.5:1",
        "largeText": "3:1"
      }
    }
  }
}
